<%- include('_header.ejs') -%>
<section class="home">
  <% if(message == "false") { %>
    <script>
      alert("<%= data %>의 ID는 이미 존재합니다.")
    </script>
    <% } %>
    <div class="container">
      <br><br><br>
      <div class="col-md-6 mx-auto text-center">
        <div class="header-title">
          <h1 class="wv-heading--title" style="color:#FFFFFF">Sign Up</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mx-auto">
          <div class="myform form ">
            <form action="/signup" method="POST">
              <div class="form-group">
                <input type="text" name="username"  class="form-control my-input" id="inputname" placeholder="Name">
              </div>
              <div class="form-group">
                <input type="email" name="email"  class="form-control my-input" id="inputemail" placeholder="Email">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name ="password" id="inputpassword" placeholder="Password">
              </div>
              <div class="text-center ">
                <button type="submit" class=" btn btn-block send-button tx-tfm">Sign Up</button>
              <div class="col-md-12 ">
                <div class="login-or">
                  <hr class="hr-or">
                </div>
              </div>
              <div class="form-group">
                  <a class="btn btn-block g-button" href="/">
                    <i class="fa fa-google"></i> Cancel
                  </a>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</section>

<%- include('_footer.ejs') -%>